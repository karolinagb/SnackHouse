@model Snack

<div class="container marginTop">
    <div class="row">
        <div class="card border-0">
            <div class="text-center view overlay hm-white-slight">
                <img src="~/img/snacks/@Model.ImgUrl" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-block">
                <!--Title-->
                <h2 class="card-title">@Model.Name</h2>
                <!--Text-->
                <p class="card-text"><h5>@Model.LongDescription</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Snacks" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>

                    <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCarts" asp-action="AddItem" asp-route-snackId="@Model.Id">
                        Adicionar @Model.Name ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>